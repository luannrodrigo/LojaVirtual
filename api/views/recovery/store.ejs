<!doctype html>
<html lang="pt-br">
<head>
    <% include ../partials/header.ejs %>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col s3 m8">
            <h2>Recuperar senha</h2>
            <hr/><br>

            <% if(success){ %>
                <div class="chip">
                    <%= success %>
                </div>
                <div>
                    <p>Acesse novamente</p>
                </div>
            <%}%>
            <% if (error) {%>
                <div class="chip">
                    <%= error%>
                </div>
            <%}%>
            <% if (!success) {%>
                <p>Digite sua nova senha</p>

                <form action="/v1/api/usuarios/senha-recuperada" method="post">
                    <div class="row">
                        <input type="hidden" id="email" name="token" value="<%= token %>">
                        <div class="col s12">
                            <input id="password" name="password" type="password" class="validate" placeholder="Digite sua nova senha">
                            <label for="Password">Senha</label>
                        </div>
                    </div>
                    <button class="waves-effect waves-light btn">Salvar</button>
                </form>
            <%}%>
        </div>
    </div>
</div>

</body>
</html>